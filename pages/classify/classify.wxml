<xzs-header></xzs-header>
<view class="banner">
	<image src="/pages/images/teaBanner.jpg" mode="aspectFill" class="img"/>
</view>


<view class="nav">
		<van-tabs
			color="#c2a872"
			title-active-color="#c2a872"
			border
		 active="{{ navActive }}"
		 id="myTabs"
		 bind:click="navChange"
		>
			<van-tab title="{{item.classname}}" wx:for="{{navArr}}" wx:key="_id"></van-tab>
		</van-tabs>
</view>


<view class="content">
	<view class="body">
			<view class="box" wx:for="{{proArr}}" wx:key="_id">
				<xzs-product-item item="{{item}}"></xzs-product-item>
			</view>                     
	</view>
	<view class="loadingOut">
		<van-loading size="24px" wx:if="{{loading}}">加载中...</van-loading>
		<view class="noData" wx:if="{{isData}}">没有更多数据了~</view>
	</view>
</view>

<xzs-footer></xzs-footer>